<div class="min-h-screen bg-gray-900 text-gray-100 px-6 py-10">
  <div class="max-w-3xl mx-auto bg-gray-800 rounded-2xl shadow-lg p-8">

    <h1 class="text-3xl font-bold mb-8">
      新しいメニューを作成
    </h1>

    <%= form_with model: @menu, url: menus_path, class: "space-y-8" do |form| %>

      <% if @menu.errors.any? %>
        <div class="bg-red-900/40 border border-red-700 text-red-300 rounded-lg p-4">
          <h2 class="font-semibold mb-2">
            <%= @menu.errors.count %>件のエラーがあります
          </h2>
          <ul class="list-disc list-inside text-sm">
            <% @menu.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "メニュー名",
            class: "block text-sm font-medium text-gray-300 mb-2" %>

        <%= form.text_field :name,
            placeholder: "例：今週の献立",
            class: "w-full rounded-lg bg-gray-900 border border-gray-700
                    text-gray-100 placeholder-gray-500
                    focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <h2 class="text-xl font-semibold mb-4">
          レシピを追加
        </h2>

        <div class="space-y-4">
          <%= form.fields_for :menu_recipes do |menu_recipe_form| %>
            <div class="bg-gray-900 border border-gray-700 rounded-xl p-4 grid grid-cols-1 md:grid-cols-2 gap-4">

              <div>
                <%= menu_recipe_form.label :recipe_id, "レシピ",
                    class: "block text-sm text-gray-400 mb-1" %>

                <%= menu_recipe_form.collection_select :recipe_id,
                    @recipes, :id, :name,
                    { prompt: "レシピを選択" },
                    class: "w-full rounded-lg bg-gray-800 border border-gray-700
                            text-gray-100 focus:ring-blue-500 focus:border-blue-500" %>
              </div>

              <div>
                <%= menu_recipe_form.label :position, "何食目？",
                    class: "block text-sm text-gray-400 mb-1" %>

                <%= menu_recipe_form.number_field :position,
                    min: 1, placeholder: "1",
                    class: "w-full rounded-lg bg-gray-800 border border-gray-700
                            text-gray-100 focus:ring-blue-500 focus:border-blue-500" %>
              </div>

            </div>
          <% end %>
        </div>
      </div>

      <div class="flex items-center justify-between pt-6">
        <%= link_to "戻る", menus_path,
            class: "text-gray-400 hover:text-gray-200 transition" %>

        <%= form.submit "作成",
            class: "bg-white text-gray-900 font-semibold px-6 py-2.5 rounded-lg shadow
                    hover:bg-gray-200 transition" %>
      </div>

    <% end %>
  </div>
</div>
