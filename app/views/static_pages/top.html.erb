<div class="bg-[#1a1a1a] overflow-hidden">
  
  <section class="relative pt-32 pb-24 md:pt-48 md:pb-40 px-6 overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-blue-600/20 blur-[120px] rounded-full pointer-events-none"></div>
    
    <div class="container mx-auto text-center relative z-10">
      <h1 class="text-5xl md:text-8xl font-black mb-8 tracking-tighter leading-tight">
        <span class="text-white"><%= t('.hero.title_part1', default: "BUILD YOUR") %></span><br>
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-emerald-400">
          <%= t('.hero.title_part2', default: "DIET MEAL") %>
        </span>
      </h1>
      
      <p class="max-w-2xl mx-auto text-gray-400 text-lg md:text-xl mb-12 font-light leading-relaxed">
        <%= t('.hero.description') %>
      </p>
      
      <div class="flex flex-col md:flex-row justify-center items-center gap-6">
        <%= link_to new_user_registration_path, class: "group relative px-8 py-4 font-black text-black bg-white rounded-2xl transition-all duration-300 hover:bg-white hover:scale-105 shadow-[0_20px_40px_rgba(37,99,235,0.3)]" do %>
          <span class="text-sm uppercase tracking-widest"><%= t('.hero.sign_up') %></span>
        <% end %>
        
        <%= link_to new_user_session_path, class: "px-8 py-4 font-bold text-gray-400 border border-white/10 rounded-2xl hover:bg-white/5 hover:text-white transition-all duration-300" do %>
          <span class="text-sm uppercase tracking-widest"><%= t('.hero.login') %></span>
        <% end %>
      </div>
    </div>
  </section>

  <section class="container mx-auto py-24 px-8">
    <div class="text-center mb-20">
      <h2 class="text-[10px] uppercase tracking-[0.4em] font-black text-white mb-4"><%= t('.features.subtitle', default: "OUR CORE FEATURES") %></h2>
      <p class="text-3xl md:text-4xl font-black text-white"><%= t('.features.title') %></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      <div class="group p-8 bg-[#242424] border border-white/5 rounded-[2.5rem] hover:border-blue-500/30 transition-all duration-500 shadow-2xl">
        <div class="w-14 h-14 bg-blue-500/10 rounded-2xl flex items-center justify-center text-blue-500 mb-8 group-hover:scale-110 transition-transform duration-500">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4"><%= t('.features.pfc_calculation.title') %></h3>
        <p class="text-gray-400 font-light leading-relaxed"><%= t('.features.pfc_calculation.description') %></p>
      </div>

      <div class="group p-8 bg-[#242424] border border-white/5 rounded-[2.5rem] hover:border-emerald-500/30 transition-all duration-500 shadow-2xl">
        <div class="w-14 h-14 bg-emerald-500/10 rounded-2xl flex items-center justify-center text-emerald-500 mb-8 group-hover:scale-110 transition-transform duration-500">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path></svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4"><%= t('.features.recipe_sharing.title') %></h3>
        <p class="text-gray-400 font-light leading-relaxed"><%= t('.features.recipe_sharing.description') %></p>
      </div>

      <div class="group p-8 bg-[#242424] border border-white/5 rounded-[2.5rem] hover:border-yellow-500/30 transition-all duration-500 shadow-2xl">
        <div class="w-14 h-14 bg-yellow-500/10 rounded-2xl flex items-center justify-center text-yellow-500 mb-8 group-hover:scale-110 transition-transform duration-500">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-4"><%= t('.features.ranking.title') %></h3>
        <p class="text-gray-400 font-light leading-relaxed"><%= t('.features.ranking.description') %></p>
      </div>
    </div>
  </section>

<section class="py-32 px-6">
    <div class="max-w-5xl mx-auto text-center">
      <div class="inline-block h-px w-12 bg-white/20 mb-8"></div>
      
      <h2 class="text-4xl md:text-7xl font-black text-white mb-12 tracking-tighter leading-tight">
        さあ、今日から<br>
        <span class="inline-block hover:italic transition-all duration-500">筋トレ飯を管理しよう。</span>
      </h2>
      
      <p class="text-gray-500 text-xs md:text-sm uppercase tracking-[0.4em] mb-12 font-bold">
        <%= t('.cta.subtitle', default: "Control your diet, Control your life.") %>
      </p>

      <%= link_to new_user_session_path, class: "group relative inline-flex items-center gap-4 bg-white text-black px-12 py-6 rounded-full overflow-hidden hover:scale-105 transition-all duration-500" do %>
        <span class="text-sm font-black uppercase tracking-widest relative z-10"><%= t('.cta.start_free') %></span>
        <svg class="w-5 h-5 transition-transform duration-500 group-hover:translate-x-2 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      <% end %>
    </div>
  </section>

</div>

<svg class="hidden">
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
    </pattern>
  </defs>
</svg>