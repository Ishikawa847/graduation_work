
  <!-- ヒーローセクション -->
  <section class="container mx-auto text-center py-24 px-6">
    <h1 class="text-4xl md:text-6xl font-bold mb-6 tracking-wide">
      <%= t('.hero.title') %>
    </h1>
    <p class="text-lg md:text-2xl mb-8">
      <%= t('.hero.description') %>
    </p>
    <div class="flex justify-center space-x-4">
      <%= link_to t('.hero.sign_up'), new_user_registration_path, class: "bg-white text-gray-900 font-semibold px-6 py-3 rounded-lg shadow hover:bg-gray-100 transition-colors duration-200" %>
      <%= link_to t('.hero.login'), new_user_session_path, class: "bg-gray-700 text-white font-semibold px-6 py-3 rounded-lg shadow hover:bg-gray-600 transition-colors duration-200" %>
    </div>
  </section>

  <!-- サービス紹介セクション -->
  <section class="container mx-auto py-16 px-6">
    <h2 class="text-3xl font-bold mb-12 text-center"><%= t('.features.title') %></h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
        <h3 class="text-xl font-semibold mb-4"><%= t('.features.pfc_calculation.title') %></h3>
        <p><%= t('.features.pfc_calculation.description') %></p>
      </div>
      <div class="bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
        <h3 class="text-xl font-semibold mb-4"><%= t('.features.recipe_sharing.title') %></h3>
        <p><%= t('.features.recipe_sharing.description') %></p>
      </div>
      <div class="bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
        <h3 class="text-xl font-semibold mb-4"><%= t('.features.ranking.title') %></h3>
        <p><%= t('.features.ranking.description') %></p>
      </div>
    </div>
  </section>

  <!-- CTAセクション -->
  <section class="bg-gray-800 py-16">
    <div class="container mx-auto text-center px-6">
      <h2 class="text-3xl font-bold mb-6"><%= t('.cta.title') %></h2>
      <%= link_to t('.cta.start_free'), new_user_session_path, class: "bg-white text-gray-900 font-semibold px-8 py-4 rounded-lg shadow hover:bg-gray-100 transition-colors duration-200" %>
    </div>
  </section>

