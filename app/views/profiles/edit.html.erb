<div class="container pt-3">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <%= form_with model: current_user, url: profile_path, local: true do |f| %>
        
        <div class="form-group">
          <%= f.label :age %>
          <%= f.text_field :age, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :height %>
          <%= f.text_field :height, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :weight %>
          <%= f.text_field :weight, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :gender %>
          <%= f.select :gender, User.genders.keys.map { |key| [key, key] }, class: 'form-control' %>
        </div>
        
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>