<div class="container mx-auto px-6 py-10 max-w-xl">

  <h1 class="text-3xl font-bold text-gray-100 mb-8 text-center">
    <%= t('.title') %>
  </h1>

  <%= form_with model: current_user, url: profile_path, local: true,
        class: "space-y-6" do |f| %>

    <div>
      <%= f.label :age,
            class: "block text-sm font-semibold text-gray-200 mb-2" %>

      <%= f.text_field :age,
            class: "w-full rounded-lg bg-gray-800 border border-gray-700
                    text-gray-100 px-4 py-2.5
                    focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :height,
            class: "block text-sm font-semibold text-gray-200 mb-2" %>

      <%= f.text_field :height,
            class: "w-full rounded-lg bg-gray-800 border border-gray-700
                    text-gray-100 px-4 py-2.5
                    focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :weight,
            class: "block text-sm font-semibold text-gray-200 mb-2" %>

      <%= f.text_field :weight,
            class: "w-full rounded-lg bg-gray-800 border border-gray-700
                    text-gray-100 px-4 py-2.5
                    focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :gender,
            class: "block text-sm font-semibold text-gray-200 mb-2" %>

      <%= f.select :gender,
            User.enum_options_for_select(:gender),
            {},
            class: "w-full rounded-lg bg-gray-800 border border-gray-700
                    text-gray-100 px-4 py-2.5
                    focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-center pt-4">
      <%= f.submit t('.submit'),
            class: "bg-white text-gray-900 font-semibold px-6 py-2.5
                    rounded-lg shadow hover:bg-gray-200 transition" %>
    </div>

  <% end %>

</div>
