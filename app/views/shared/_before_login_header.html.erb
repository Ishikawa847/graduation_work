<header class="bg-[#1a1a1a] backdrop-blur-xl border-b border-white/5 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-8 py-4">

    <div>
      <%= link_to root_path, class: "group flex items-center" do %>
        <span class="text-2xl font-black tracking-tighter text-white group-hover:text-blue-500 transition-colors duration-300">
          MYMUSCLEMEAL
        </span>
      <% end %>
    </div>

    <div class="flex items-center gap-4">
      
      <%# ログイン：テキストベースのクリーンなリンク %>
      <%= link_to new_user_session_path, 
          class: "text-[11px] uppercase tracking-[0.2em] font-bold text-gray-400 hover:text-white transition-colors duration-300 px-2" do %>
        <%= t('header.login') %>
      <% end %>

      <%= link_to new_user_registration_path,
          class: "relative inline-flex items-center justify-center px-6 py-2.5 overflow-hidden font-bold text-gray transition-all duration-300 bg-white rounded-xl group hover:bg-blue-500 shadow-[0_0_20px_rgba(37,99,235,0.3)] hover:shadow-[0_0_25px_rgba(37,99,235,0.5)]" do %>
        <span class="relative text-[11px] uppercase tracking-widest font-black">
          <%= t('header.sign_up') %>
        </span>
      <% end %>

    </div>

  </div>
</header>