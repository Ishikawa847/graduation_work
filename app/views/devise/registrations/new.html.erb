<div class="min-h-screen flex items-center justify-center bg-[#1a1a1a] text-gray-100 p-6 selection:bg-white selection:text-black">
  <div class="w-full max-w-[440px]">

    <div class="text-center mb-10">
      <h2 class="text-4xl font-black tracking-tighter mb-2 uppercase italic text-white">
        <%= t('.title') %>
      </h2>
      <div class="h-0.5 w-10 bg-white mx-auto"></div>
    </div>

    <div class="bg-[#242424] border border-white/5 rounded-[2.5rem] p-8 md:p-10 shadow-2xl">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <%# エラーメッセージのカスタマイズ（別途 partial の調整を推奨） %>
        <div class="mb-6">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="space-y-5">
          <div>
            <%= f.label :name, class: "block text-[10px] uppercase tracking-[0.2em] font-bold text-gray-500 mb-2 ml-1" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name",
                placeholder: "Your Name",
                class: "w-full px-5 py-3.5 bg-[#1a1a1a] border border-white/5 rounded-2xl text-white placeholder-gray-700 focus:outline-none focus:border-white/20 focus:ring-4 focus:ring-white/5 transition-all duration-300" %>
          </div>

          <div>
            <%= f.label :email, class: "block text-[10px] uppercase tracking-[0.2em] font-bold text-gray-500 mb-2 ml-1" %>
            <%= f.email_field :email, autocomplete: "email",
                placeholder: "example@mail.com",
                class: "w-full px-5 py-3.5 bg-[#1a1a1a] border border-white/5 rounded-2xl text-white placeholder-gray-700 focus:outline-none focus:border-white/20 focus:ring-4 focus:ring-white/5 transition-all duration-300" %>
          </div>

          <div>
            <div class="flex justify-between items-end mb-2 ml-1">
              <%= f.label :password, class: "block text-[10px] uppercase tracking-[0.2em] font-bold text-gray-500" %>
              <% if @minimum_password_length %>
                <span class="text-[9px] text-gray-600 font-mono tracking-tighter uppercase"><%= t('helpers.password_requirement', count: @minimum_password_length) %></span>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password",
                placeholder: "••••••••",
                class: "w-full px-5 py-3.5 bg-[#1a1a1a] border border-white/5 rounded-2xl text-white placeholder-gray-700 focus:outline-none focus:border-white/20 focus:ring-4 focus:ring-white/5 transition-all duration-300" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-[10px] uppercase tracking-[0.2em] font-bold text-gray-500 mb-2 ml-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                placeholder: "••••••••",
                class: "w-full px-5 py-3.5 bg-[#1a1a1a] border border-white/5 rounded-2xl text-white placeholder-gray-700 focus:outline-none focus:border-white/20 focus:ring-4 focus:ring-white/5 transition-all duration-300" %>
          </div>

          <div class="pt-4">
            <%= f.submit t('devise.shared.links.sign_up'),
                class: "w-full bg-white text-black font-black uppercase tracking-widest py-4 rounded-2xl shadow-xl hover:bg-gray-200 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-white/5 text-center">
        <div class="text-[10px] uppercase tracking-widest space-y-3 font-bold text-gray-500">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <div class="mt-8 text-center">
      <%= link_to root_path, class: "text-[10px] uppercase tracking-[0.3em] font-bold text-gray-600 hover:text-white transition-colors" do %>
        ← Back to Home
      <% end %>
    </div>

  </div>
</div>