<div class="min-h-screen flex items-center justify-center bg-[#1a1a1a] text-gray-100 p-6 selection:bg-white selection:text-black">
  <div class="w-full max-w-[400px]">

    <div class="text-center mb-10">
      <h2 class="text-4xl font-black tracking-tighter mb-2 uppercase italic text-white">
        <%= t('user_sessions.new.title') %>
      </h2>
      <div class="h-0.5 w-10 bg-white mx-auto"></div>
    </div>

    <div class="bg-[#242424] border border-white/5 rounded-[2.5rem] p-8 md:p-10 shadow-2xl">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="space-y-6">
          <div>
            <%= f.label :email, class: "block text-[10px] uppercase tracking-[0.2em] font-bold text-gray-500 mb-2 ml-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                placeholder: "example@mail.com",
                class: "w-full px-5 py-4 bg-[#1a1a1a] border border-white/5 rounded-2xl text-white placeholder-gray-700 focus:outline-none focus:border-white/20 focus:ring-4 focus:ring-white/5 transition-all duration-300" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-[10px] uppercase tracking-[0.2em] font-bold text-gray-500 mb-2 ml-1" %>
            <%= f.password_field :password, autocomplete: "current-password",
                placeholder: "••••••••",
                class: "w-full px-5 py-4 bg-[#1a1a1a] border border-white/5 rounded-2xl text-white placeholder-gray-700 focus:outline-none focus:border-white/20 focus:ring-4 focus:ring-white/5 transition-all duration-300" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center space-x-3 ml-1 group cursor-pointer">
              <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-white/10 bg-[#1a1a1a] text-white focus:ring-0 focus:ring-offset-0 checked:bg-white" %>
              <%= f.label :remember_me, class: "text-xs text-gray-500 group-hover:text-gray-300 transition-colors cursor-pointer" %>
            </div>
          <% end %>

          <div class="pt-2">
            <%= f.submit t('user_sessions.new.login'),
                class: "w-full bg-white text-black font-black uppercase tracking-widest py-4 rounded-2xl shadow-xl hover:bg-gray-200 hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-white/5 text-center">
        <div class="text-[10px] uppercase tracking-widest space-y-3 font-bold text-gray-500">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <div class="mt-8 text-center">
      <%= link_to root_path, class: "text-[10px] uppercase tracking-[0.3em] font-bold text-gray-600 hover:text-white transition-colors" do %>
        ← Back to Home
      <% end %>
    </div>

  </div>
</div>