  <!-- ページタイトル & 右上検索ボックス -->
  <section class="container mx-auto px-6 pt-12">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-3xl font-bold">投稿一覧</h1>

        <div class="row mb-4">
          <div class="col-lg-8 offset-lg-2">
            <%= render 'search_form' %>
          </div>
        </div>
    </div>

      <div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-8">レシピ一覧</h1>
  
  <% if @recipes.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @recipes.each do |recipe| %>
        <%= render 'recipe', recipe: recipe %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center">
      <p class="text-gray-600 mb-4">まだレシピが投稿されていません。</p>
      <%= link_to '新しいレシピを作成', new_recipe_path, 
          class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>
  </section>

