<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 h-full flex flex-col">
  <div class="flex-shrink-0">
    <%= image_tag recipe.image, alt: recipe.name, 
        class: "w-full h-full object-cover" %>
  </div>
  
  <div class="p-4 flex-grow flex flex-col">
    <h3 class="text-xl font-semibold text-gray-800 mb-2">
      <%= link_to recipe.name, "#", 
          class: "hover:text-blue-600 transition duration-200" %>
    </h3>
    
    <p class="text-gray-600 text-sm flex-grow mb-3">
      <%= truncate(recipe.description, length: 80) %>
    </p>
    
    <div class="mt-auto">
      <small class="text-gray-500 text-xs">
        <%= recipe.created_at.strftime("%Y年%m月%d日") %>
      </small>
    </div>
  </div>
</div>