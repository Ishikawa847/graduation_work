<div data-controller="autocomplete" 
     data-action="click@window->autocomplete#hideResults"
     class="relative group w-full max-w-md">
  
  <%= search_form_for @q, url: recipes_path, method: :get, class: "relative" do |f| %>
    <div class="flex items-center gap-2 bg-[#242424] border border-white/10 rounded-2xl p-1.5 shadow-2xl transition-all duration-300 focus-within:border-blue-500/50 focus-within:ring-4 focus-within:ring-blue-500/10">

      <%# 検索アイコン %>
      <div class="pl-3 text-gray-500">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>

      <%= f.search_field :name_or_description_cont,
          data: { 
            autocomplete_target: "input",
            action: "input->autocomplete#search"
          },
          class: "flex-1 bg-transparent text-gray-100 placeholder-gray-500
                  text-sm border-none focus:ring-0 py-2.5 px-2",
          placeholder: t('recipes.index.search_placeholder'),
          autocomplete: "off" %>

      <%= f.submit t('defaults.search'),
          class: "bg-[#333333] hover:bg-blue-600 text-white text-xs font-bold uppercase tracking-widest
                  px-5 py-2.5 rounded-xl transition-all duration-300 cursor-pointer shadow-lg" %>

    </div>
  <% end %>
  
  <ul data-autocomplete-target="results"
      class="absolute z-50 w-full bg-[#242424]/95 backdrop-blur-xl border border-white/10 rounded-2xl mt-3 shadow-[0_20px_50px_rgba(0,0,0,0.5)] max-h-96 overflow-y-auto overflow-hidden hidden">
      </ul>
  
</div>