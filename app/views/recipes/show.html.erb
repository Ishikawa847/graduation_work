<div class="min-h-screen bg-[#1a1a1a] text-gray-100 p-4 md:p-12">
  <div class="max-w-6xl mx-auto">
    
    <div class="bg-[#242424] border border-white/5 rounded-3xl shadow-2xl overflow-hidden">
      <div class="grid grid-cols-1 lg:grid-cols-12">
        
        <div class="lg:col-span-5 p-6 border-b lg:border-b-0 lg:border-r border-white/5">
          <div class="relative group h-80 lg:h-full min-h-[300px]">
            <% if @recipe.image.attached? %>
              <%= image_tag @recipe.large_image, class: "w-full h-full object-cover rounded-2xl shadow-inner transition-transform duration-700 group-hover:scale-105" %>
            <% else %>
              <div class="flex flex-col items-center justify-center h-full bg-[#1a1a1a]/50 rounded-2xl text-gray-600 border-2 border-dashed border-gray-800">
                <svg class="w-16 h-16 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                <span class="text-sm uppercase tracking-widest opacity-50 font-bold">No Image</span>
              </div>
            <% end %>
            <div class="absolute inset-0 bg-gradient-to-t from-[#1a1a1a]/80 to-transparent rounded-2xl pointer-events-none"></div>
          </div>
        </div>

        <div class="lg:col-span-7 p-8 flex flex-col space-y-8">
          
          <div class="border-b border-white/5 pb-6">
            <span class="text-blue-400 text-xs font-bold tracking-[0.2em] uppercase mb-2 block">Recipe Details</span>
            <h1 class="text-4xl md:text-5xl font-black tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-500">
              <%= @recipe.name %>
            </h1>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center bg-[#1a1a1a]/60 p-6 rounded-2xl border border-white/5">
            <div class="space-y-4">
              <h2 class="text-sm font-bold text-gray-400 uppercase tracking-widest flex items-center">
                <span class="w-2 h-5 bg-blue-500 rounded-full mr-3"></span>
                <%= t('recipes.show.pfc_information') %>
              </h2>
              <div class="space-y-3">
                <div class="flex justify-between items-center p-3 bg-[#2a2a2a] rounded-xl border border-white/5">
                  <span class="flex items-center text-sm font-medium"><span class="w-2 h-2 rounded-full bg-red-500 mr-3"></span><%= t('recipes.show.protein') %></span>
                  <span class="font-mono font-bold text-xl"><%= @recipe.total_protein.round(1) %><small class="text-[10px] ml-1 text-gray-500">g</small></span>
                </div>
                <div class="flex justify-between items-center p-3 bg-[#2a2a2a] rounded-xl border border-white/5">
                  <span class="flex items-center text-sm font-medium"><span class="w-2 h-2 rounded-full bg-blue-500 mr-3"></span><%= t('recipes.show.fat') %></span>
                  <span class="font-mono font-bold text-xl"><%= @recipe.total_fat.round(1) %><small class="text-[10px] ml-1 text-gray-500">g</small></span>
                </div>
                <div class="flex justify-between items-center p-3 bg-[#2a2a2a] rounded-xl border border-white/5">
                  <span class="flex items-center text-sm font-medium"><span class="w-2 h-2 rounded-full bg-yellow-500 mr-3"></span><%= t('recipes.show.carbo') %></span>
                  <span class="font-mono font-bold text-xl"><%= @recipe.total_carb.round(1) %><small class="text-[10px] ml-1 text-gray-500">g</small></span>
                </div>
              </div>
            </div>
            
            <div class="relative h-48 flex items-center justify-center">
              <%= pie_chart( 
                { t('recipes.show.protein') => @recipe.total_protein, t('recipes.show.fat') => @recipe.total_fat, t('recipes.show.carbo') => @recipe.total_carb }, 
                colors: ["#EF4444", "#3B82F6", "#EAB308"],
                donut: true,
                legend: false,
                library: { 
                  cutout: '75%',
                  plugins: { tooltip: { backgroundColor: '#1a1a1a', titleColor: '#fff', bodyColor: '#ccc' } }
                }
              ) %>
              <div class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none">
                <span class="text-gray-500 text-[10px] uppercase tracking-tighter font-bold">PFC</span>
                <span class="text-lg font-light text-white/80 text-center leading-tight">Total<br>Balance</span>
              </div>
            </div>
          </div>

          <div class="space-y-3">
            <h2 class="text-sm font-bold text-gray-400 uppercase tracking-widest flex items-center">
              <span class="w-2 h-5 bg-emerald-500 rounded-full mr-3"></span>
              <%= t('recipes.show.description') %>
            </h2>
            <div class="bg-[#1a1a1a]/40 p-6 rounded-2xl border border-white/5 min-h-[120px] relative overflow-hidden">
              <p class="leading-relaxed text-gray-300 italic text-lg text-pretty relative z-10 font-light">
                "<%= @recipe.description.presence || t('recipes.show.no_description') %>"
              </p>
              <span class="absolute -bottom-2 -right-2 text-8xl text-white/5 font-serif select-none pointer-events-none">‚Äù</span>
            </div>
          </div>

        </div>
      </div>
    </div>
    
  </div>
</div>