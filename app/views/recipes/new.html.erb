<div class="container mx-auto px-4 py-12 max-w-2xl">
  <h1 class="text-3xl font-bold text-center mb-8 text-gray-100">
    <%= t('recipes.new.title') %>
  </h1>

  <%= form_with model: @recipe, local: true, multipart: true, class: "space-y-8" do |form| %>

    <%# エラーメッセージ %>
    <% if @recipe.errors.any? %>
      <div class="bg-red-900/40 border border-red-600 text-red-300 px-4 py-3 rounded-lg">
        <h4 class="font-bold"><%= t('recipes.new.error_occur') %>:</h4>
        <ul class="mt-2 list-disc pl-5">
          <% @recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# 料理名 %>
    <div>
      <%= form.label :name, class: "block text-gray-200 text-sm font-semibold mb-2" %>
      <%= form.text_field :name, 
          class: "bg-gray-800 border border-gray-700 rounded w-full py-3 px-4 text-gray-100 placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <%# 料理説明 %>
    <div>
      <%= form.label :description, class: "block text-gray-200 text-sm font-semibold mb-2" %>
      <%= form.text_area :description, rows: 4,
          class: "bg-gray-800 border border-gray-700 rounded w-full py-3 px-4 text-gray-100 placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <%# 写真 %>
    <div data-controller="image-preview">
      <%= form.label :image, class: "block text-gray-200 text-sm font-semibold mb-2" %>

      <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-600 border-dashed rounded-lg bg-gray-800">
        <div class="text-center space-y-2">

       <img id="image-preview" src="" alt="" class="mx-auto max-h-64 rounded hidden" data-image-preview-target="preview">

      <button
        type="button"
        class="hidden mt-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded"
        data-image-preview-target="removeButton"
        data-action="click->image-preview#remove"
      >
        <%= "delete" %> <!-- または「画像を削除」など -->
      </button>

          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
            <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" />
          </svg>

          <div class="text-sm text-gray-300">
            <%= form.file_field :image, class: "sr-only", id: "image-upload", accept: "image/*",
            data: { 
      image_preview_target: "input",
      action: "change->image-preview#preview"
    }  %>

            <label for="image-upload"
              class="cursor-pointer bg-gray-700 px-3 py-1 rounded text-blue-400 hover:text-blue-300">
              <%=t('recipes.new.upload_image') %>
            </label>
            <p><%= t('recipes.new.or_drag_and_drop')%></p>
          </div>

          <p class="text-xs text-gray-400">PNG, JPG, GIF (最大5MB)</p>
        </div>
      </div>
    </div>

    <%# 食材セクション %>
    <div>
      <h2 class="text-xl font-bold text-gray-100 mb-4">食材</h2>

      <div id="ingredients-container">
        <%= form.fields_for :recipe_ingredients do |ingredient_form| %>
          <div class="ingredient-item bg-gray-800 p-6 rounded-lg shadow-lg mb-4">
            
            <!-- 既存食材選択エリア -->
            <div class="existing-ingredient-section">
              <h3 class="text-lg font-semibold text-gray-200 mb-3">既存の食材を使用</h3>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- 既存食材選択 -->
                <div>
                  <label class="block text-sm font-medium text-gray-200 mb-2">食材を選択</label>
                  <%= ingredient_form.collection_select :ingredient_id,
                        @ingredients,
                        :id,
                        :name,
                        { prompt: '-- 選択してください --' },
                        { class: 'ingredient-select w-full rounded-md bg-gray-800 border-gray-600 text-gray-100 focus:border-green-500 focus:ring-green-500' } %>
                  
                  <!-- 栄養価表示エリア -->
                  <div class="nutrition-info mt-3 p-3 bg-gray-700 rounded-md text-sm" style="display: none;">
                    <p class="text-gray-300 mb-1">栄養価(100gあたり):</p>
                    <div class="grid grid-cols-3 gap-2 text-xs">
                      <div>
                        <span class="text-gray-400">タンパク質:</span>
                        <span class="nutrition-display-protein text-green-400 font-semibold">0</span>g
                      </div>
                      <div>
                        <span class="text-gray-400">脂質:</span>
                        <span class="nutrition-display-fat text-yellow-400 font-semibold">0</span>g
                      </div>
                      <div>
                        <span class="text-gray-400">炭水化物:</span>
                        <span class="nutrition-display-carb text-blue-400 font-semibold">0</span>g
                      </div>
                    </div>
                  </div>
                </div>

                <!-- 既存食材用の分量入力 -->
                <div class="existing-quantity-input">
                  <label class="block text-sm font-medium text-gray-200 mb-2">使用量</label>
                  <div class="flex items-center gap-2">
                    <%= ingredient_form.number_field :quantity,
                          step: 0.1,
                          placeholder: "150",
                          class: "existing-quantity w-full rounded-md bg-gray-800 border-gray-600 text-gray-100 focus:border-green-500 focus:ring-green-500",
                          disabled: false %>
                    <span class="text-xs text-gray-400 whitespace-nowrap">g</span>
                  </div>
                  <p class="text-xs text-gray-400 mt-1">※食材を選択すると入力できます</p>
                </div>
              </div>
            </div>

            <!-- 区切り線 -->
            <div class="border-t border-gray-600 my-6"></div>

            <!-- 新規食材登録エリア -->
            <div class="new-ingredient-section">
              <button type="button" class="toggle-new-ingredient text-lg font-semibold text-green-400 hover:text-green-300 flex items-center gap-2 mb-3">
                <span class="expand-icon transition-transform">▶</span>
                <span>新しい食材を登録する</span>
              </button>
              
              <div class="new-ingredient-form" style="display: none;">
                <div class="bg-gray-700 p-4 rounded-md">
                  <p class="text-sm text-gray-300 mb-3">新しい食材の情報を入力してください</p>
                  
                  <%= ingredient_form.fields_for :ingredient do |new_ingredient_form| %>
                    <div class="space-y-3">
                      <!-- 食材名 -->
                      <div>
                        <label class="block text-sm font-medium text-gray-200 mb-1">食材名</label>
                        <%= new_ingredient_form.text_field :name,
                              placeholder: "例: 鶏むね肉",
                              class: "new-ingredient-name w-full rounded-md bg-gray-800 border-gray-600 text-gray-100 focus:border-green-500 focus:ring-green-500",
                              disabled: true %>
                      </div>

                      <!-- 栄養価入力 -->
                      <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                        <div>
                          <label class="block text-sm font-medium text-gray-200 mb-1">タンパク質</label>
                          <div class="flex items-center gap-2">
                            <%= new_ingredient_form.number_field :protein,
                                  step: 0.1,
                                  placeholder: "23.3",
                                  class: "new-ingredient-protein w-full rounded-md bg-gray-800 border-gray-600 text-gray-100 focus:border-green-500 focus:ring-green-500",
                                  disabled: true %>
                            <span class="text-xs text-gray-400 whitespace-nowrap">g/100g</span>
                          </div>
                        </div>

                        <div>
                          <label class="block text-sm font-medium text-gray-200 mb-1">脂質</label>
                          <div class="flex items-center gap-2">
                            <%= new_ingredient_form.number_field :fat,
                                  step: 0.1,
                                  placeholder: "1.9",
                                  class: "new-ingredient-fat w-full rounded-md bg-gray-800 border-gray-600 text-gray-100 focus:border-green-500 focus:ring-green-500",
                                  disabled: true %>
                            <span class="text-xs text-gray-400 whitespace-nowrap">g/100g</span>
                          </div>
                        </div>

                        <div>
                          <label class="block text-sm font-medium text-gray-200 mb-1">炭水化物</label>
                          <div class="flex items-center gap-2">
                            <%= new_ingredient_form.number_field :carb,
                                  step: 0.1,
                                  placeholder: "0",
                                  class: "new-ingredient-carb w-full rounded-md bg-gray-800 border-gray-600 text-gray-100 focus:border-green-500 focus:ring-green-500",
                                  disabled: true %>
                            <span class="text-xs text-gray-400 whitespace-nowrap">g/100g</span>
                          </div>
                        </div>
                      </div>

                      <!-- 新規食材用の分量入力 -->
                      <div class="mt-4">
                        <label class="block text-sm font-medium text-gray-200 mb-1">使用量</label>
                        <div class="flex items-center gap-2">
                          <%= ingredient_form.number_field :quantity,
                                step: 0.1,
                                placeholder: "150",
                                class: "new-quantity w-full rounded-md bg-gray-800 border-gray-600 text-gray-100 focus:border-green-500 focus:ring-green-500",
                                disabled: true %>
                          <span class="text-xs text-gray-400 whitespace-nowrap">g</span>
                        </div>
                        <p class="text-xs text-gray-400 mt-1">※食材情報を入力すると使用量を入力できます</p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- 削除ボタン -->
            <div class="mt-4 flex justify-end">
              <button type="button" class="remove-ingredient text-red-400 hover:text-red-300 text-sm font-medium">
                この食材を削除
              </button>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 食材追加ボタン -->
      <button type="button" id="add-ingredient" class="mt-4 bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200">
        + 食材を追加
      </button>
    </div>

    <%# 送信ボタン %>
    <div class="flex justify-center">
      <%= form.submit t('recipes.new.new_recipe'),
            class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg text-lg transition transform hover:scale-105" %>
    </div>

  <% end %>

  <div class="text-center mt-8">
    <%= link_to t('recipes.new.back_to_recipes'), recipes_path,
          class: "text-blue-400 hover:text-blue-300 underline" %>
  </div>
</div>